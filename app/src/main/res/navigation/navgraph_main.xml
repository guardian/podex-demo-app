<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navgraph_main.xml"
    app:startDestination="@id/searchFragment">

    <fragment android:id="@+id/searchFragment"
        android:name="com.guardian.podxdemo.presentation.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_search_fragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.guardian.podxdemo.presentation.feed.FeedFragment"
        android:label="FeedFragment" >
        <argument
            android:name="searchResult"
            app:argType="com.guardian.core.search.SearchResult" />
        <action
            android:id="@+id/action_feedFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
    </fragment>
    <activity
        android:id="@+id/playerActivity"
        android:name="com.guardian.podxdemo.presentation.player.PlayerActivity"
        android:label="PlayerActivity" />

</navigation>