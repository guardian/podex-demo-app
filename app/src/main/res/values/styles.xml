<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/PodXTextAppearance</item>
        <item name="editTextStyle">@style/PodXEditText</item>
        <item name="android:textViewStyle">@style/PodXTextView</item>
    </style>

    <style name="PodXTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="PodXTextAppearanceDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="PodXEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/sixtyPercentWhite</item>
        <item name="android:backgroundTint">@color/sixtyPercentWhite</item>
    </style>

    <style name="PodXTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/PodXTextAppearance</item>
    </style>
</resources>
