<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorBackground">@color/primaryLightColor</item>
        <item name="colorSurface">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryDarkColor</item>
        <item name="android:textAppearance">@style/PodXTextAppearance</item>
        <item name="editTextStyle">@style/PodXEditText</item>
        <item name="android:textViewStyle">@style/PodXTextView</item>
        <item name="android:progressBarStyle">@style/PodXProgressBar</item>
        <item name="seekBarStyle">@style/PodXSeekBar</item>
        <item name="borderlessButtonStyle">@style/PodXTextButton</item>
        <item name="materialButtonStyle">@style/PodXButton</item>
    </style>

    <style name="PodXTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="PodXTextAppearanceDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="PodXTextAppearanceFeedTime" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PodXTextAppearanceFeedDate" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/secondaryDarkTextColor</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PodXEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/sixtyPercentWhite</item>
        <item name="android:backgroundTint">@color/sixtyPercentWhite</item>
    </style>

    <style name="PodXTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/PodXTextAppearance</item>
    </style>

    <style name="PodXSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/highlightColor</item>
        <item name="android:progressBackgroundTint">@color/seekbarBackground</item>
        <item name="android:progressBackgroundTintMode">src_over</item>
        <item name="android:thumbTint">@color/highlightColor</item>
    </style>

    <style name="PodXProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/highlightColor</item>
        <item name="android:progressBackgroundTint">@color/seekbarBackground</item>
    </style>

    <style name="PodXTitleTextAppearenceDark">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">@dimen/podx_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "PodXAppBarDark">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryLightColor</item>
        <item name="tint">@color/primaryLightColor</item>
    </style>

    <style name="PodXTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="PodXButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/primaryColor</item>
<!--        <item name="colorOnPrimary">@color/shrine_pink_900</item>-->
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
<!--        <item name="fontFamily">@font/rubik</item>-->
<!--        <item name="android:fontFamily">@font/rubik</item>-->

        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>
